{
  "manifest_version": 3,
  "name": "Báo cáo tuân thủ vnFace",
  "version": "1.0",
  "description": "Báo cáo tuân thủ vnFace",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://console-vnface.vnpt.vn/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://console-vnface.vnpt.vn/*"
      ],
      "js": [
        "xlsx.min.js"
      ]
    }
  ]
}
